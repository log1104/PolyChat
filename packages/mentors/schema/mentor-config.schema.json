{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://polychat.app/schemas/mentor-config.schema.json",
  "title": "MentorConfigEnvelope",
  "type": "object",
  "required": ["id", "draft"],
  "properties": {
    "id": { "type": "string" },
    "draft": { "$ref": "#/definitions/MentorConfigCore" },
    "published": { "$ref": "#/definitions/MentorConfigCore" },
    "updated_at": { "type": "string" },
    "updated_by": { "type": "string" }
  },
  "definitions": {
    "MentorConfigCore": {
      "type": "object",
      "required": ["id", "persona"],
      "properties": {
        "id": { "type": "string" },
        "persona": { "$ref": "#/definitions/Persona" },
        "model": { "$ref": "#/definitions/Model" },
        "runtime": { "$ref": "#/definitions/Runtime" },
        "tools": { "$ref": "#/definitions/Tools" },
        "metadata": { "$ref": "#/definitions/Metadata" }
      }
    },
    "Persona": {
      "type": "object",
      "required": ["system_prompt"],
      "properties": {
        "system_prompt": { "type": "string", "minLength": 1 },
        "style_guidelines": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "variables": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "description": { "type": "string" },
              "required": { "type": "boolean" },
              "default": {},
              "example": {},
              "constraints": {
                "type": "object",
                "properties": {
                  "regex": { "type": "string" },
                  "maxLength": { "type": "integer", "minimum": 1 }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "default": {}
        },
        "response_format": {
          "type": "string",
          "enum": ["plain", "markdown", "json", "html"],
          "default": "markdown"
        },
        "output_schema": { "type": "object" },
        "language": { "type": "string" },
        "starter_prompts": { "type": "array", "items": { "type": "string" } },
        "example_messages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["role", "content"],
            "properties": {
              "role": { "type": "string", "enum": ["system", "user", "assistant"] },
              "content": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "knowledge_cutoff": { "type": "string" },
        "citation_policy": { "type": "string", "enum": ["required", "encouraged", "optional", "never"] },
        "disclaimer": { "type": "string" },
        "safety_rules": {
          "type": "object",
          "properties": {
            "allow": { "type": "array", "items": { "type": "string" } },
            "deny": { "type": "array", "items": { "type": "string" } },
            "escalation": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "Model": {
      "type": "object",
      "properties": {
        "provider": { "type": "string", "default": "openrouter" },
        "model_id": { "type": "string", "default": "openai/gpt-4o-mini" },
        "params": {
          "type": "object",
          "properties": {
            "temperature": { "type": "number", "minimum": 0, "maximum": 2, "default": 0.7 },
            "top_p": { "type": "number", "minimum": 0, "maximum": 1, "default": 1 },
            "max_tokens": { "type": "integer", "minimum": 1 },
            "frequency_penalty": { "type": "number", "minimum": -2, "maximum": 2, "default": 0 },
            "presence_penalty": { "type": "number", "minimum": -2, "maximum": 2, "default": 0 }
          },
          "additionalProperties": true,
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "Runtime": {
      "type": "object",
      "properties": {
        "timeout_ms": { "type": "integer", "minimum": 1, "default": 20000 },
        "retries": { "type": "integer", "minimum": 0, "default": 2 },
        "rate_limit_hint": {
          "type": "object",
          "properties": {
            "window_seconds": { "type": "integer", "minimum": 1 },
            "max_requests": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "Tools": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": { "type": "string" },
              "enabled": { "type": "boolean", "default": false },
              "config": { "type": "object", "default": {} },
              "dependencies": { "type": "array", "items": { "type": "string" }, "default": [] }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    },
    "Metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "description": { "type": "string" }
      },
      "additionalProperties": true,
      "default": {}
    }
  }
}

